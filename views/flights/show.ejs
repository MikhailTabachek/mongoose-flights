<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section> 
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight number: </div>
    <div><%= flight.flightNo %></div>
    <div>Departs: </div>
    <div><%= flight.departs %></div>
    <div>Meals:</div>
    <ul>
      <% flight.meals.forEach(meal => { %>
        <li><%= meal.name %></li>
      <% }) %>
    </ul>
  </section>
  <form id="add-meal-to-flight" action="/flights/<%= flight._id%>/meals" method="POST">
    <select name="mealId">
      <% meals.forEach(meal => { %>
        <option value="<%= meal._id %>"><%= meal.name %></option>
      <% }) %>
    </select>
    <button type="submit">Add to Meals</button>
  </form>
  <h3>Add Ticket</h3>
  <form
    action="/flights/<%= flight._id %>/tickets"
    method="POST"
  >
    <label for="seat-select">Enter a Seat(A-F) and Row(1-9):
      <input name="seat" id="seat-select" required pattern="[A-F][1-9]\d?" placeholder="Example: C5" autocomplete="off">
    </label>
    <label for="ticket-price">Ticket Price:
      <input name="price" id="ticket-price"type="text" autocomplete="off" placeholder="Enter amount...">
    </label>
      <button type="submit">Add Ticket</button>
  </form>


  <% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
          <th>Seat</th>
          <th>Price $</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(function(ticket) { %>
          <tr>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
          </tr>
          <% }) %>
      </tbody>
    </table>
        <% } %>
  <div>
    <a href="/flights/<%= flight._id %>/edit">
      <button>Edit Your Flight</button>
    </a>
  </div>
</main>

    <%- include("../partials/footer") %>